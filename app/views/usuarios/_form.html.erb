<% form_for(@usuario, :html =>{:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.label :paterno %><br />
    <%= f.text_field :paterno %>
  </p>
  <p>
    <%= f.label :materno %><br />
    <%= f.text_field :materno %>
  </p>
  <p>
    <%= f.label :ci %><br />
    <%= f.text_field :ci %>
  </p>
  <p>
    <%= f.label :telefono, "TelÃ©fono" %><br />
    <%= f.text_field :telefono %>
  </p>


  <% if params[:action] == "new" %>
    <p>
      <% f.label :login %><br />
      <% f.text_field :login %>
    </p>
    <p>
      <% f.label :password %><br />
      <% f.password_field :password %>
    </p>
    <p>
      <% f.label :password_confirmation %><br />
      <% f.password_field :password_confirmation %>
    </p>
  <% end %>



  <p>
    <%= f.label :foto %><br />
    <%= f.file_field :foto %>
  </p>

  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>


