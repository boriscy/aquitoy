<h1>Usuarios</h1>

<%= link_to 'Nuevo usuario', new_usuario_path, :class => 'new' %>
<br/>
<table>
  <tr>
    <th>Nombre</th>
    <th>Paterno</th>
    <th>Materno</th>
    <th>CI</th>
    <th>Telefono</th>
    <th>Foto</th>
    <th colspan="3">&nbsp;</th>
  </tr>

<% @usuarios.each do |usuario| %>
  <tr>
    <td><%=h usuario.nombre %></td>
    <td><%=h usuario.paterno %></td>
    <td><%=h usuario.materno %></td>
    <td><%=h usuario.ci %></td>
    <td><%=h usuario.telefono %></td>
    <td><%= image_tag(usuario.foto(:mini)) %></td>
    <td><%= link_to 'Ver', usuario %></td>
    <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
    <td><%= link_to 'Borrar', usuario, :confirm => 'Esta seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>


<%= will_paginate @usuarios %>
